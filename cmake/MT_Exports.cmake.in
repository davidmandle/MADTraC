set(MT_VER_MAJOR ${MT_VER_MAJOR})
set(MT_VER_MINOR ${MT_VER_MINOR})
set(MT_VER_PATCH ${MT_VER_PATCH})
set(MT_VERSION ${MT_VERSION})
set(MT_VERSION_NUMBER ${MT_VERSION_NUMBER})

set(MT_SNOW_LEOPARD_BUILD ${SNOW_LEOPARD})

set(MT_INCLUDE ${MT_INCLUDE_INSTALL_DIR} CACHE PATH "Location of MADTraC include directory")
if("${CMAKE_GENERATOR}" MATCHES "Xcode")
  set(MT_LIBS_DIR "${MT_LIBS_INSTALL_DIR}/${CMAKE_CFG_INTDIR}" CACHE PATH "Location of MADTraC libraries")
else("${CMAKE_GENERATOR}" MATCHES "Xcode")  
  set(MT_LIBS_DIR ${MT_LIBS_INSTALL_DIR} CACHE PATH "Location of MADTraC libraries")
endif("${CMAKE_GENERATOR}" MATCHES "Xcode")
  
set(MT_GL_INCLUDE_DIR ${GL_INCLUDE_DIR} CACHE PATH "OpenGL include directory")
set(MT_GL_LIBS ${GL_LIBS} CACHE PATH "OpenGL libraries")
mark_as_advanced(MT_GL_INCLUDE_DIR CACHE)
mark_as_advanced(MT_GL_LIBS CACHE)

set(MT_HAVE_CLF ${WITH_CLF})
if(MT_HAVE_CLF)
  set(MT_CLF_INCLUDE  ${CLF_INCLUDE}      CACHE PATH "CLF include directory")
  set(MT_CLF_LIB      ${CLF_LIB}          CACHE PATH "CLF libraries")
  set(MT_HDF5_INCLUDE ${HDF5_INCLUDE_DIR} CACHE PATH "HDF5 include directory")
  set(MT_HDF5_LIB     ${HDF5_LIBRARIES}   CACHE PATH "HDF5 libraries")
  if(MSVC)
    set(MT_HDF5_EXTRA_LIBS ${HDF5_EXTRA_LIBS} CACHE PATH "HDF5 extra libs")
  endif(MSVC)
  mark_as_advanced(MT_CLF_INCLUDE)
  mark_as_advanced(MT_CLF_LIB)
  mark_as_advanced(MT_HDF5_INCLUDE)
  mark_as_advanced(MT_HDF5_LIB)
else(MT_HAVE_CLF)
  unset(MT_CLF_INCLUDE  CACHE)
  unset(MT_CLF_LIB      CACHE)
  unset(MT_HDF5_INCLUDE CACHE)
  unset(MT_HDF5_LIB     CACHE)
endif(MT_HAVE_CLF)

set(MT_HAVE_OPENCV ${WITH_OPENCV})
if(MT_HAVE_OPENCV)
  if(${HAVE_OPENCV_FRAMEWORK})
    set(MT_OPENCV_FRAMEWORK ${OPENCV_FRAMEWORK} CACHE PATH "OpenCV Framework")
    set(MT_HAVE_OPENCV_FRAMEWORK ON)
  else(${HAVE_OPENCV_FRAMEWORK})
    set(MT_HAVE_OPENCV_FRAMEWORK OFF)
    unset(MT_OPENCV_FRAMEWORK CACHE)
  endif(${HAVE_OPENCV_FRAMEWORK})
  set(MT_OPENCV_INC ${OPENCV_INC} CACHE PATH "OpenCV Include Directory")
  set(MT_OPENCV_LIBS ${OPENCV_LIBS} CACHE PATH "OpenCV Libraries")
  set(MT_OPENCV_LIBS_DIR ${OPENCV_LIBS_DIR} CACHE PATH "OpenCV Libraries Directory")
else(MT_HAVE_OPENCV)
  unset(MT_OPENCV_ROOT CACHE)
  unset(MT_OPENCV_INC CACHE)
  unset(MT_OPENCV_LIBS CACHE)
  unset(MT_OPENCV_LIBS_DIR CACHE)
endif(MT_HAVE_OPENCV)

set(MT_WX_INCLUDE "${WX_INCLUDE}" CACHE PATH "wxWidgets include directory")
set(MT_WX_LIB     "${WX_LIB}"     CACHE PATH "wxWidgets library")
set(MT_WX_EXTRA_LIBS "${WX_EXTRA_LIBS}" CACHE PATH "wxWidgets dependency libraries")
set(MT_WX_DEFS    "${WX_DEFS}"  CACHE STRING "wxWidgets preprocessor definitions")
mark_as_advanced(MT_WX_INCLUDE)
mark_as_advanced(MT_WX_LIB)
mark_as_advanced(MT_WX_EXTRA_LIBS)
mark_as_advanced(MT_WX_DEFS)

set(MT_HAVE_ARTK ${WITH_ARTK})
if(MT_HAVE_ARTK)
  set(MT_ARTK_INCLUDE ${ARTK_INCLUDE} CACHE PATH "ARToolKit include directory")
  set(MT_ARTK_LIB     ${ARTK_LIB}     CACHE PATH "ARToolKit libraries")
  mark_as_advanced(MT_ARTK_INCLUDE)
  mark_as_advanced(MT_ARTK_LIB)
else(MT_HAVE_ARTK)
  unset(MT_ARTK_LIB CACHE)
endif(MT_HAVE_ARTK)

set(MT_HAVE_AVT ${WITH_AVT})
if(MT_HAVE_AVT)
  set(MT_AVT_INC "${AVT_INC}" CACHE PATH "AVT Include Path")
  set(MT_AVT_LIB "${AVT_LIB}" CACHE STRING "AVT Library")
endif(MT_HAVE_AVT)  

set(MT_USE_WX_JOYSTICK ${MT_USE_WX_JOYSTICK})